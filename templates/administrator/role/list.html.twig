{% extends 'base.html.twig' %}

{% block title %}СПРУТ 1.0{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
    {{ include('block/header.html.twig') }}


    <div class="page page-layout">
        <aside class="navbar navbar-vertical navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbar-menu">
                    {% include 'administrator/block/nav_user.html.twig' with {'controller': 'role'} %}
                </div>
            </div>
        </aside>
        <div class="page-wrapper">
            <div class="container-xl">
                {% include 'administrator/block/header_list.html.twig' with {'header': 'Роли'} %}
            </div>
            <div class="page-body">
                <div class="container-xl">
                    <div class="row row-deck row-cards">
                        <div class="col-12">

                            <div class="card">
                                <div class="card-body border-bottom py-3">
                                    <div class="d-flex align-items-center mb-0">
                                        <div class="input-group input-group-flat">
                                            <input type="text" class="form-control" placeholder="Поиск"
                                                   autocomplete="off">
                                            <span class="input-group-text">
                                            <a href="#" class="link-secondary" title="Очистить Поиск"
                                               data-bs-toggle="tooltip">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24"
                                                     height="24" viewBox="0 0 24 24" stroke-width="2"
                                                     stroke="currentColor" fill="none" stroke-linecap="round"
                                                     stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z"
                                                                                   fill="none"/><line x1="18" y1="6"
                                                                                                      x2="6" y2="18"/><line
                                                        x1="6" y1="6" x2="18" y2="18"/></svg>
                                            </a>
                                            <a href="#" class="link-secondary ms-2" title="Поиск"
                                               data-bs-toggle="tooltip">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24"
                                                     height="24" viewBox="0 0 24 24" stroke-width="2"
                                                     stroke="currentColor" fill="none" stroke-linecap="round"
                                                     stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z"
                                                                                   fill="none"></path><circle cx="10"
                                                                                                              cy="10"
                                                                                                              r="7"></circle><line
                                                        x1="21" y1="21" x2="15" y2="15"></line></svg>
                                            </a>
                                            <a href="#" class="link-secondary ms-2" title="Экспорт в Excel"
                                               data-bs-toggle="tooltip">
                                                <svg xmlns="http://www.w3.org/2000/svg"
                                                     class="icon icon-tabler icon-tabler-table-export" width="44"
                                                     height="44" viewBox="0 0 24 24" stroke-width="1.5"
                                                     stroke="currentColor" fill="none" stroke-linecap="round"
                                                     stroke-linejoin="round">
                                                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                  <path
                                                      d="M11.5 20h-5.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v7.5m-16 -3.5h16m-10 -6v16m4 -1h7m-3 -3l3 3l-3 3"/>
                                                </svg>
                                            </a>
                                        </span>
                                        </div>
                                        <div class="ms-2">
                                            <div class="btn-group w-100">
                                                <a class="btn" data-bs-toggle="offcanvas" href="#userCreationPanel"
                                                   role="button" aria-controls="offcanvasEnd">Создать</a>
                                                <a class="btn" data-bs-toggle="offcanvas" href="#userEditingPanel"
                                                   role="button" aria-controls="offcanvasEnd">Изменить</a>
                                                <a class="btn" data-bs-toggle="modal" data-bs-target="#userRemoveModal"
                                                   href="#">Удалить</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="users-table-wrap table-responsive">
                                    <table id="usersTable"
                                           class="users-table table card-table table-vcenter text-nowrap datatable">
                                        <thead>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                            <th>Название роли</th>
                                            <th>Идентификатор роли</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% if role_list|default(false) %}
                                            {% for ul in role_list %}
                                                <tr class="user-table-row {% if loop.first %}is-selected{% endif %}">
                                                    <td><span class="badge bg-success"></span></td>
                                                    <td>
                                                        <svg xmlns="http://www.w3.org/2000/svg"
                                                             class="icon icon-tabler icon-tabler-adjustments-horizontal"
                                                             width="44" height="44" viewBox="0 0 24 24"
                                                             stroke-width="1.5"
                                                             stroke="currentColor" fill="none" stroke-linecap="round"
                                                             stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                            <circle cx="14" cy="6" r="2"/>
                                                            <line x1="4" y1="6" x2="12" y2="6"/>
                                                            <line x1="16" y1="6" x2="20" y2="6"/>
                                                            <circle cx="8" cy="12" r="2"/>
                                                            <line x1="4" y1="12" x2="6" y2="12"/>
                                                            <line x1="10" y1="12" x2="20" y2="12"/>
                                                            <circle cx="17" cy="18" r="2"/>
                                                            <line x1="4" y1="18" x2="15" y2="18"/>
                                                            <line x1="19" y1="18" x2="20" y2="18"/>
                                                        </svg>
                                                    </td>
                                                    <td>
                                                        {{ ul.name|default(false) }}
                                                    </td>
                                                    <td>
                                                        {{ ul.roles_alt|default(false) }}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        {% endif %}
                                        </tbody>
                                    </table>
                                </div>
                                <div class="card-footer d-flex align-items-center">
                                    <p class="m-0 text-muted"><b>{{ role_list|length }}</b> результатов</p>
                                    {#
                                    <ul class="pagination m-0 ms-auto">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                                <!-- Download SVG icon from http://tabler-icons.io/i/chevron-left -->
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24"
                                                     height="24" viewBox="0 0 24 24" stroke-width="2"
                                                     stroke="currentColor" fill="none" stroke-linecap="round"
                                                     stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                    <polyline points="15 6 9 12 15 18"/>
                                                </svg>
                                            </a>
                                        </li>
                                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item active"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24"
                                                     height="24" viewBox="0 0 24 24" stroke-width="2"
                                                     stroke="currentColor" fill="none" stroke-linecap="round"
                                                     stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                    <polyline points="9 6 15 12 9 18"/>
                                                </svg>
                                            </a>
                                        </li>
                                    </ul>
                                    #}
                                </div>
                            </div>


                            {% include 'administrator/role/form/create_form.html.twig' %}
                            {% include 'administrator/role/form/update_form.html.twig' %}
                            {% include 'administrator/modal/delete.html.twig' %}

                            <div id="userEditingOverlay" class="offcanvas-backdrop fade"></div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
