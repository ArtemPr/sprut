<div class="offcanvas-header">
    <h2 class="offcanvas-title">Создание роли</h2>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
</div>
<div class="offcanvas-body">
    <form action="#" name="role-create" id="role_add-create" class="form-create">
        <div class="form-group mb-3 row">
            <label class="form-label col-3 col-form-label">Название</label>
            <div class="col">
                <input type="text" class="form-control" name="name" placeholder="название для роли" required>
            </div>
        </div>
        <div class="form-group mb-3 row">
            <label class="form-label col-3 col-form-label">Идентификатор</label>
            <div class="col">
                <input type="text" class="form-control" name="roles_alt" placeholder="ROLE_XXXXXXXXX" required>
            </div>
        </div>
        <div class="form-group mb-3 row">
            <label class="form-label col-3 col-form-label">Комментарий</label>
            <div class="col">
                <textarea name="comment" class="form-control"></textarea>
            </div>
        </div>
        <div class="d-flex mb-4">
            <button data-form-id="role_add-create" data-action="send-form" type="submit"
                    class="btn btn-primary ms-auto"
                    aria-label="Close"
            >Сохранить
            </button>
        </div>


        <form class="hierarchy" method="post">
        <ul class="hierarchy__group-list">
            <li class="hierarchy__group-item" data-scope-for="desktop">
                    <label class="hierarchy__scope">
                        <input type="checkbox" name="desktop" value="desktop" class="js-checkbox-scope parent-checkbox-scope"  data-selected-by="workflow" >Рабочий стол
                    </label>
            </li>
            <li class="hierarchy__group-item" data-scope-for="desktop">
                    <label class="hierarchy__scope">
                        <input type="checkbox" name="desktop" value="desktop" class="js-checkbox-scope parent-checkbox-scope" data-selected-by="workflow" >Курсы
                    </label>
            </li>
            <li class="hierarchy__group-item" data-scope-for="repo">
                    <label class="hierarchy__scope parent-scope">
                        <input type="checkbox" name="oauth_access[scopes][]" value="repo" class="js-checkbox-scope parent-checkbox-scope" data-selected-by="workflow" > Панель управления
                </label>
                <ul class="child-scopes">
                    <li class="personal-access-tokens js-check-scope-container" data-scope-for="repo:status">
                            <label class="hierarchy__scope">
                                <input type="checkbox" name="oauth_access[scopes][]" value="repo:status" class="js-checkbox-scope" /> создание
                            </label>
                    </li>
                    <li class="personal-access-tokens js-check-scope-container" data-scope-for="repo_deployment">
                            <label class="hierarchy__scope">
                                <input type="checkbox" name="oauth_access[scopes][]" value="repo_deployment" class="js-checkbox-scope"  data-selected-by> удаление
                            </label>
                    </li>
                    <li class="personal-access-tokens js-check-scope-container" data-scope-for="repo_deployment">
                            <label class="hierarchy__scope">
                                <input type="checkbox" name="oauth_access[scopes][]" value="repo_deployment" class="js-checkbox-scope"> редактирование
                            </label>
                    </li>
                </ul>
            </li>
        </ul>
        </form>

