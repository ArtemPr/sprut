<div class="users-table-wrap table-responsive">
    <table id="usersTable" class="users-table table card-table table-vcenter text-nowrap datatable">
        <thead>
        <tr>
            <th>Раздел</th>
            <th>Тип события</th>
            <th>Название события </th>
            <th>Инициатор события (ФИО)</th>
            <th>Электронная почта</th>
            <th>IP-адрес</th>
            <th>Дата / Время</th>
            <th>Комментарий</th>
            <th class="hidden-cell"></th>
        </tr>
        </thead>
        <tbody>
        {% if data|default(false) %} {% for dat in data %}
            <tr class="user-table-row">
                <td> {{ dat.chapter }} </td>
                <td> Администрирование </td>
                <td>{{ data_action[dat.action]}}</td>
                <td>{{ dat.user_loger.username}} {{dat.user_loger.surname|first}}.{{dat.user_loger.patronymic|first}}. </td>
                <td>{{ dat.user_loger.email}}</td>
                <td>{{ dat.ip }}</td>
                <td>{{ dat.time }}</td>
                <td>{{ dat.comment }}</td>
                <td class="hidden-cell"> <input class="selected-checkbox" type="checkbox" name="#" checked> </td> </tr>
        {% endfor %}
        {% endif %}
        </tbody>
    </table>
</div>
<div class="card-footer d-flex align-items-center">
    <p class="m-0 text-muted"><b>5</b> результатов</p>
    <ul class="pagination m-0 ms-auto">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                <!-- Download SVG icon from http://tabler-icons.io/i/chevron-left -->
