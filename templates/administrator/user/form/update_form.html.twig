                            <div class="form-group mb-3 row">
                                <label class="form-label col-3 col-form-label">Должность</label>
                                <div class="col">
                                    <input type="text" class="form-control" placeholder="Должность" value="{{ data.position|default('') }}" name="position">
                                </div>
                            </div>

