{% extends 'base.html.twig' %}

{% block title %}СПРУТ 1.0{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
    {{ include('block/header.html.twig') }}


    <div class="page page-layout">
        <aside class="navbar navbar-vertical navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbar-menu">
                    {% include 'administrator/block/nav_user.html.twig' with {'controller': 'user'} %}
                </div>
            </div>
        </aside>
        <div class="page-wrapper">
            <div class="container-xl">
                {% include 'administrator/block/header_list.html.twig' with {'header': 'Пользователи'} %}
            </div>
            <div class="page-body">
                <div class="container-xl">
                    <div class="row row-deck row-cards">
                        <div class="col-12">

                            <div class="card">

                                {% include 'administrator/user/block/search_panel.html.twig' %}

                                <div class="users-table-wrap table-responsive">
                                    <table id="usersTable"
                                           class="users-table table card-table table-vcenter text-nowrap datatable">
                                        <thead>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                            <th>ФИО</th>
                                            <th>Должность</th>
                                            <th>Подразделение</th>
                                            <th>Почта</th>
                                            <th>Скайп</th>
                                            <th>Телефон</th>
                                            <th>Город</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% if user_list|default(false) %}
                                            {% for ul in user_list %}
                                                <tr class="user-table-row {% if loop.first %}is-selected{% endif %}">
                                                    <td><span class="badge bg-success"></span></td>
                                                    <td>
                                                        <svg xmlns="http://www.w3.org/2000/svg"
                                                             class="icon icon-tabler icon-tabler-adjustments-horizontal"
                                                             width="44" height="44" viewBox="0 0 24 24"
                                                             stroke-width="1.5"
                                                             stroke="currentColor" fill="none" stroke-linecap="round"
                                                             stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                            <circle cx="14" cy="6" r="2"/>
                                                            <line x1="4" y1="6" x2="12" y2="6"/>
                                                            <line x1="16" y1="6" x2="20" y2="6"/>
                                                            <circle cx="8" cy="12" r="2"/>
                                                            <line x1="4" y1="12" x2="6" y2="12"/>
                                                            <line x1="10" y1="12" x2="20" y2="12"/>
                                                            <circle cx="17" cy="18" r="2"/>
                                                            <line x1="4" y1="18" x2="15" y2="18"/>
                                                            <line x1="19" y1="18" x2="20" y2="18"/>
                                                        </svg>
                                                    </td>
                                                    <td>
                                                        {{ ul.username|default(false) }}
                                                        {{ ul.surname|default(false) }}
                                                        {{ ul.patronymic|default(false) }}
                                                    </td>
                                                    <td>
                                                        Программист
                                                    </td>
                                                    <td>
                                                        Отдел разработки
                                                    </td>
                                                    <td>
                                                        {% if  ul.email|default(false) %}
                                                            <a href="mailto:{{ ul.email }}">
                                                                {{ ul.email }}
                                                            </a>
                                                        {% else %}
                                                            -
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {% if  ul.skype|default(false) %}
                                                            <a href="skype:{{ ul.skype }}">
                                                                {{ ul.skype }}
                                                            </a>
                                                        {% else %}
                                                            -
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {% if  ul.phone|default(false) %}
                                                            <a href="tel:{{ ul.phone }}">
                                                                {{ ul.phone }}
                                                            </a>
                                                        {% else %}
                                                            -
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {{ ul.city|default('-') }}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        {% endif %}
                                        </tbody>
                                    </table>
                                </div>


                                <div class="card-footer d-flex align-items-center">
                                    <p class="m-0 text-muted"><b>{{ user_list|length }}</b> результатов</p>
                                    {% if user_list|length > 25 %}
                                    <ul class="pagination m-0 ms-auto">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                                <!-- Download SVG icon from http://tabler-icons.io/i/chevron-left -->
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24"
                                                     height="24" viewBox="0 0 24 24" stroke-width="2"
                                                     stroke="currentColor" fill="none" stroke-linecap="round"
                                                     stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                    <polyline points="15 6 9 12 15 18"/>
                                                </svg>
                                            </a>
                                        </li>
                                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item active"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                                        <li class="page-item">
                                            <a class="page-link" href="#">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24"
                                                     height="24" viewBox="0 0 24 24" stroke-width="2"
                                                     stroke="currentColor" fill="none" stroke-linecap="round"
                                                     stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                    <polyline points="9 6 15 12 9 18"/>
                                                </svg>
                                            </a>
                                        </li>
                                    </ul>
                                    {% endif %}
                                </div>
                            </div>

                            <div id="userEditingOverlay" class="offcanvas-backdrop fade"></div>

                            {% include 'administrator/user/form/create_form.html.twig' %}
                            {% include 'administrator/user/form/update_form.html.twig' %}
                            {% include 'administrator/modal/delete.html.twig' %}
                            {% include 'administrator/user/modal/departament.html.twig' %}
                            {% include 'administrator/user/modal/role.html.twig' %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
