<div class="offcanvas-header">
    <h2 class="offcanvas-title">Редактирование операции</h2>
    <button id="jsEditingPanelCloser" type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"  aria-label="Close"></button>
</div>
<div class="offcanvas-body">
   <form action="#" name="operations-update" id="operations_update-form" class="form-update">
       <input type="hidden" name="id" value="{{ data.id|default(false) }}">
        <div class="form-group mb-3 row">
            <label class="form-label col-3 col-form-label">Название</label>
            <div class="col">
                <input type="text" class="form-control" name="name" placeholder="Название" value="{{ data.name|default('') }}" required>
            </div>
        </div>
        <div class="form-group mb-3 row">
            <label class="form-label col-3 col-form-label">Комментарий</label>
            <div class="col">
                <textarea class="form-control" placeholder="Комментарий" name="comment">{{ data.comment|default('') }}</textarea>
            </div>
        </div>
        <div class="d-flex mb-4">
            <button data-form-id="operations_update-form" data-action="send-form" type="submit"
                    class="btn btn-primary ms-auto"
                    aria-label="Close">Сохранить</button>
        </div>
    </form>
</div>
