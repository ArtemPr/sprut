<div class="offcanvas-header">
    <h2 class="offcanvas-title">Создание продуктового направления</h2>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
</div>
<div class="offcanvas-body">
    <form action="#" name="product_line-create" id="product_line_add-create" class="form-create">
        <div class="">
            <div class="card-body">
                <div class="form-group mb-3 row">
                    <label class="form-label col-3 col-form-label">Название *</label>
                    <div class="col">
                        <input name="name" type="text" class="form-control" placeholder="Название продуктового направления"
                               required value="">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label class="form-label col-3 col-form-label">Кластер</label>
                    <div class="col">
                        <select name="cluster" class="form-control">
                            {% for cluster in clusters %}
                            <option value="{{ cluster.id }}">{{ cluster.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>

            <div class="d-flex mb-4">
                <button data-form-id="product_line_add-create" data-action="send-form" type="submit"
                        class="btn btn-primary ms-auto"
                        aria-label="Close"
                >Сохранить
                </button>
            </div>
        </div>
    </form>
</div>
