<div class="offcanvas-header">
    <h2 class="offcanvas-title">Редактирование кластера</h2>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
</div>
<div class="offcanvas-body">
    <form action="#" name="cluster-update" id="cluster_update-form" class="form-update">

        <input type="hidden" name="id" value="{{ data.id|default(false) }}">

        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane active show" id="tabs-ex3">

                    <div class="form-group mb-3 row">
                        <label class="form-label col-3 col-form-label">Название *</label>
                        <div class="col">
                            <input name="name" type="text" class="form-control" placeholder="Название ФГОС"
                                   required value="{{ data.name|default(false) }}">
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="d-flex mb-4">
            <button data-form-id="cluster_update-form" data-action="send-form" type="submit"
                    class="btn btn-primary ms-auto"
                    aria-label="Close"
            >Сохранить
            </button>
        </div>
    </form>
</div>
