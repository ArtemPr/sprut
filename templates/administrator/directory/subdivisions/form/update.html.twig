<div class="offcanvas-header">
    <h2 class="offcanvas-title">Редактирование требования работодателя</h2>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
</div>
<div class="offcanvas-body">
    <form action="#" name="subdivisions-update" id="subdivisions_update-form" class="form-update">
        <input type="hidden" name="id" value="{{ data.id|default(false) }}">
        <div class="form-group mb-3 row">
            <label class="form-label col-3 col-form-label">Название подразделения</label>
            <div class="col">
                <input name="subdivisions_name" type="text" class="form-control" placeholder="Название подразделения"
                       required value="{{ data.subdivisions_name|default(false) }}">
            </div>
        </div>
        <div class="d-flex mb-4">
            <button data-form-id="subdivisions_update-form" data-action="send-form" type="submit"
                    class="btn btn-primary ms-auto" aria-label="Close">Сохранить
            </button>
        </div>
    </form>
</div>
