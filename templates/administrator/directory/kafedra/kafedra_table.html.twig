<div class="users-table-wrap table-responsive" id="table_container">

    <table id="usersTable"
           class="users-table table card-table table-vcenter datatable">
        <thead>
        <tr>
            {% if table|default(false) %}
                {% for tbl in table %}
                    {% if tbl['show'] == true %}
                        {% if tbl['header'] == '' %}
                            <th></th>
                        {% else %}
                            <th>
                                <div class="th-name">
                                    <div class="sort-name-wrap">
                                        {#                                            <span class="drag-icon" title="Переместить колонку {{ tbl['header'] }}"></span>#}
                                        <span class="name-text">{{ tbl['header'] }}</span>
                                    </div>

                                    <div class="filter-sort-wrap">
                                        {% if tbl['sort'] == true %}
                                            <a title="Сортировка по значению ({{ tbl['header'] }})"
                                               class="sort-icon is-{% if sort.current_sort|default(false) and sort.current_sort == tbl['name'] %}desc{% elseif sort.current_sort|default(false) and sort.current_sort == (tbl['name']~'__up') %}asc{% else %}both{% endif %}"
                                               href="{{ path('administrator_kafedra') ~ sort.sort_link ~ tbl['name'] }}{% if sort.current_sort|default(false) and sort.current_sort == tbl['name'] %}__up{% endif %}"
                                            ></a>
                                        {% endif %}

                                        {% if tbl['filter'] == true %}
                                            {% include 'administrator/block/block_filter.html.twig' with {
                                                'columnIndex': loop.index,
                                                'columnHeader': tbl['header'],
                                                'columnName': tbl['name'],
                                                'columnType': tbl['type'],
                                            } %}
                                        {% endif %}

                                    </div>
                                </div>
                            </th>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% set id=1 %}
        {% if data|default(false) %}
            {% for dat in data %}

                <tr data-string="{{ dat.id }}" data-type="kafedra" class="user-table-row {% if loop.first %}is-selected{% endif %}">
                    <td>
                        {{ dat['id']|default(false) }}
                    </td>
                    <td>
                        {{ dat['training_centre']['name']|default(false) }}
                    </td>
                    <td>
                        {{ dat['name']|default(false) }}
                    </td>
                    <td>
                        {{ dat['director']['username']|default(false) }}
                    </td>
                    <td>
                        {{ dat['director']['email']|default(false) }}
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
</div>

{% include 'block/paginator.html.twig' with {
    'path': path('administrator_kafedra')
}  %}
