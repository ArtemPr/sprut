<div class="offcanvas-header">
    <h2 class="offcanvas-title">Создание ФГОС</h2>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
</div>
<div class="offcanvas-body">
    <form action="#" name="fgos-create" id="fgos_add-create" class="form-create">

        <div class="form-group mb-3 row flex-nowrap align-items-center">
            <label for="cb-activity" class="form-label col-4 col-form-label">ФГОС активен</label>
            <div class="form-check form-switch mb-0 ms-2">
                <input id="cb-activity" class="form-check-input" type="checkbox" name="active">
            </div>
        </div>
        <div class="">
            <ul class="nav nav-tabs" data-bs-toggle="tabs">
                <li class="nav-item">
                    <a href="#tabs-ex1" class="nav-link active" data-bs-toggle="tab">Основное</a>
                </li>
                <li class="nav-item">
                    <a href="#tabs-ex2" class="nav-link" data-bs-toggle="tab">Компетенции</a>
                </li>
            </ul>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active show" id="tabs-ex1">
                        <div class="form-group mb-3 row">
                            <label class="form-label col-3 col-form-label">Тип *</label>
                            <div class="col">
                                <select name="type" class="form-control" required>
                                    <option disabled selected>Выберите тип</option>
                                    <option name="type" value="1">
                                        Высшее образование
                                    </option>
                                    <option name="type" value="2">
                                        Высшее образование бакалавриат
                                    </option>
                                    <option name="type" value="3">
                                        Высшее образование специалитет
                                    </option>
                                    <option name="type" value="4">
                                        Среднее профессиональное образование
                                    </option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group mb-3 row">
                            <label class="form-label col-3 col-form-label">Название *</label>
                            <div class="col">
                                <textarea name="name" class="form-control" style="min-height: 100px;"></textarea>
                            </div>
                        </div>

                        <div class="form-group mb-3 row">
                            <label class="form-label col-3 col-form-label">Название короткое *</label>
                            <div class="col">
                                <input name="short_name" type="text" class="form-control" placeholder="Название ФГОС"
                                       required value="">
                            </div>
                        </div>

                        <div class="form-group mb-3 row">
                            <label class="form-label col-3 col-form-label">Код *</label>
                            <div class="col">
                                <input name="code" type="text" class="form-control" placeholder="Код ФГОС" required value="">
                            </div>
                        </div>

                        <div class="form-group mb-3 row">
                            <label class="form-label col-3 col-form-label">Дата *</label>
                            <div class="col">
                                <input name="data_create" type="date" class="form-control" required value="">
                            </div>
                        </div>

                        <div class="form-group mb-3 row">
                            <label class="form-label col-3 col-form-label">Номер приказа *</label>
                            <div class="col">
                                <input name="pr_num" type="number" class="form-control" required value="">
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane" id="tabs-ex2">
                        <div class="d-flex mb-4">
                            <button name="add_string" type="button" class="btn btn-primary ms-auto btn-green" id="add_string_create">Добавить</button>
                        </div>
                        <table class="users-table table card-table table-vcenter datatable" id="add_string_table">
                            <thead>
                            <tr>
                                <th style="width: 5%">ID</th>
                                <th>Название</th>
                                <th>Код</th>
                                <th style="width: 5%">Удалить</th>
                            </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td>-</td>
                                    <td>
                                        <input type="text" name="comp_name_new[]" class="form-control" value="" required />
                                    </td>
                                    <td>
                                        <input type="text" name="comp_code_new[]" class="form-control" value="" required />
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="delete_string">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#d63939" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                <line x1="4" y1="7" x2="20" y2="7" />
                                                <line x1="10" y1="11" x2="10" y2="17" />
                                                <line x1="14" y1="11" x2="14" y2="17" />
                                                <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                                <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                                            </svg>
                                        </button>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class='spinner-save spinner-save--add'>
                <img alt="spinner" src="{{ absolute_url('/assets/images/loading--big.gif') }}">
            </div>

            <div class="d-flex mb-4">
                <button id='fgos_add-submit' data-form-id="fgos_add-create" data-action="send-form" type="submit"
                        class="btn btn-primary ms-auto"
                        {# aria-label="Close" #}
                >Сохранить
                </button>
            </div>
        </div>
    </form>
</div>
