<div class="offcanvas-header">
    <h2 class="offcanvas-title">Редактирование шаблона документа</h2>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
</div>
<div class="offcanvas-body">
    <form action="#" name="document_templates-update" id="document_templates_update-update" class="form-update">
        <div class="">
            <div class="card-body">

                <input type="hidden" name="id" value="{{ data.id|default(false) }}">

                <div class="form-group mb-3 row flex-nowrap align-items-center">
                    <label for="dt-activity" class="form-label col-4 col-form-label">Шаблон активен</label>
                    <div class="form-check form-switch mb-0 ms-2">
                        <input id="dt-activity" class="form-check-input" type="checkbox" name="active"
                               checked="{{ data.active|default(false) }}" value="{{ data.active|default(false) }}">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label class="form-label col-3 col-form-label">Название шаблона</label>
                    <div class="col">
                        <input name="dt-name" type="text" class="form-control" placeholder="Название шаблона"
                               required value="{{ data.template_name|default(false) }}">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label class="form-label col-3 col-form-label">Комментарий</label>
                    <div class="col">
                        <textarea name="dt-comment" class="form-control" style="min-height: 100px;">{{ data.comment|default(false) }}</textarea>
                    </div>
                </div>
            </div>
            <div class="d-flex mb-4">
                <button data-form-id="document_templates-edit" data-action="send-form" type="submit"
                        class="btn btn-primary ms-auto"
                        aria-label="Close"
                >Сохранить
                </button>
            </div>
        </div>
    </form>
</div>

