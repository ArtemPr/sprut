<div class="offcanvas-header">
    <h2 class="offcanvas-title">Обновление запроса</h2>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
</div>
<div class="offcanvas-body">
    <form action="#" name="update_litera-update" id="update_litera-update" class="form-update" method="post">
        <div class="card-body">
            <div class="row">
                <div class="col">

                    <div class="form-group mb-3 row">
                        <div class="col">
                            <label class="form-check mb-2">
                                <input
                                    class="form-check-input"
                                    type="checkbox"
                                    name="unique_discipline"
                                    value="1"
                                    onclick="if (this.checked == true) { document.getElementById('lit_disciplines_edit').setAttribute('disabled', 'disabled'); } else { document.getElementById('lit_disciplines_edit').removeAttribute('disabled'); }"
                                    {% if data.discipline.id|default(false) == false %}checked="checked"{% endif %}
                                >
                                <span class="form-check-label">Универсальная дисциплина</span>
                                <span class="form-check-description">Выберите этот пункт для документа,
                                    который не нужно привязывать к какой-либо дисциплине</span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group mb-3 row">
                        <label class="form-label col-3 col-form-label">Дисциплина</label>
                        <div class="col">
                            <select class="form-select" name="discipline" id="lit_disciplines_edit">
                                <option disabled {% if data.discipline.id|default(false) == false %}selected{% endif %}>
                                    Выберите дисциплину
                                </option>
                                {% for discipline in disciplines %}
                                    <option value="{{ discipline.id }}"
                                        {% if data.discipline.id|default(false) and discipline.id == data.discipline.id %}
                                            selected
                                        {% endif %}
                                    >
                                        {{ discipline.name | replace({'&amp;': '&'}) | replace({'&ndash;': '-'}) | escape('html') }}
                                        {% if discipline.comment %}
                                            ({{ discipline.comment | raw }})
                                        {% endif %}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group mb-3 row">
                        <label class="form-label col-3 col-form-label">Название документа</label>
                        <div class="col">
                            <input type="text" class="form-control" placeholder="укажите название документа (необязательно)" name="doc_name" value="{{ data.doc_name }}">
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="d-flex mb-4">
            <input type="hidden" name="id" value="{{ data.id }}">

            <button data-form-id="update_litera-update" data-action="send-form" type="submit"
                    class="btn btn-primary ms-auto"
                    aria-label="Close">Сохранить
            </button>
        </div>
    </form>
</div>
